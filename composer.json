{
  "name": "ys/module-shipment-comment",
  "description": "Magento 2 extension that adds shipment comments (admin UI + persistence + optional notifications).",
  "type": "magento2-module",
  "version": "1.0.0",
  "license": "MIT",
  "authors": [
    {
      "name": "Yevhen Sviet",
      "email": "ysviet@gmail.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=8.4",
    "magento/framework": "103.*",
    "magento/module-sales": "103.*",
    "magento/module-shipping": "103.*"
  },
  "autoload": {
    "files": [
      "registration.php"
    ],
    "psr-4": {
      "Ys\\ShipmentComment\\": ""
    }
  },
  "extra": {
    "map": [
      [
        "*",
        "Ys/ShipmentComment"
      ]
    ]
  },
  "keywords": [
    "magento2",
    "shipment",
    "comment",
    "order",
    "admin"
  ],
  "support": {
    "email": "ysviet@gmail.com",
    "issues": "https://github.com/yevhen-sviet/Ys_ShipmentComment/issues",
    "source": "https://github.com/yevhen-sviet/Ys_ShipmentComment"
  }
}