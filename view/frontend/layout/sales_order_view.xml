<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="head.additional">
            <block class="Ys\ShipmentComment\Block\Css"
              name="ys.shipmentcomment.css.account"
              template="Ys_ShipmentComment::css.phtml">
                <arguments>
                    <argument name="config_path" xsi:type="string">shipping/ys_shipmentcomment/account_css</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Ys\ShipmentComment\Block\Order\Comment"
              name="ys.shipmentcomment.account.info"
              template="Ys_ShipmentComment::order/comment_front.phtml"
              after="sales.order.view"/>
        </referenceContainer>
    </body>
</page>
