<?php
/** @var $block \Magento\Framework\View\Element\Template */
$order = $block->getOrder() ?: ($block->getData('order') ?? null);
if (!$order && method_exists($block->getParentBlock(), 'getOrder')) {
    $order = $block->getParentBlock()->getOrder();
}
$comment = $order ? (string)$order->getData('shipment_comment') : '';
?>
<?php if ($comment): ?>
<div class="block block-order-shipment-comment">
  <div class="block-title"><strong><?= $block->escapeHtml(__('Shipment Comment')) ?></strong></div>
  <div class="block-content"><p><?= nl2br($block->escapeHtml($comment)) ?></p></div>
</div>
<?php endif; ?>
