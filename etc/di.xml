        <plugin name="ys_shipmentcomment_shippinginfo_plugin"
          type="Ys\ShipmentComment\Plugin\Checkout\ShippingInformationManagementPlugin"/>
    </type>
    <type name="Magento\Sales\Model\Order\Email\SenderBuilder">
        <plugin name="ys_shipmentcomment_email_vars"
          type="Ys\ShipmentComment\Plugin\Email\AddShipmentCommentToEmail"/>
    </type>
    <type name="Magento\Sales\Api\OrderRepositoryInterface">
        <plugin name="ys_shipmentcomment_order_extattr_loader"
          type="Ys\ShipmentComment\Plugin\Sales\OrderRepositoryLoadExtensionAttributes"/>
    </type>
</config>
